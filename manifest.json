{
    "manifest_version": 3,
    "name": "Otavie's Extension",
    "description": "Just a simple chrome extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "images/icons-16.png",
        "32": "images/icons-32.png",
        "48": "images/icons-48.png",
        "128": "images/icons-128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "alarms"
    ]
}